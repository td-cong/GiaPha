@model GiaPha.Models.Anh

@{
    var controllerName = "Anhs";
    var controllerTitle = "ảnh";
    ViewBag.Title = "Xóa " + controllerTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="my-3">@(ViewBag.Title)</h4>
<hr />

<div class="">
    <img id="imgAnh"
         class="@(Model.DuongDan?.Length > 0 ? "" : "d-none")"
         src="@(Model.DuongDan ?? "")"
         style="max-width: 100%; max-height: 100%"
         title="Ảnh hiện tại"
         alt="Chưa có ảnh" />
</div>
<div class="my-3 text-danger">Bạn chắc chắn xóa nội dung này? Thao tác này sẽ không thể hoàn tác!</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="submit" class="btn btn-danger"><i class="bi bi-x-circle"></i> Xác nhận xóa</button>
        <a class="btn btn-secondary" href="@Url.Action("/QuanLy")">Quay lại</a>
    </div>
}