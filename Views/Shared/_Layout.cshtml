@{
    var currentUser = (GiaPha.Controllers.HomeController.TaiKhoan)Session["User"];
    var currentUri = HttpContext.Current.Request.Url.AbsoluteUri ?? HttpContext.Current.Request.Url.Scheme + HttpContext.Current.Request.Url.Host + HttpContext.Current.Request.Path ?? "";
    string activeClass(string target)
    {
        return currentUri.Contains(target) ? " active" : "";
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gia phả số</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*<div class="bgtren"><div class="logo" align="center"><a href="/"><img src="~/Content/img/logo.png" class="logo_img"></a></div></div>*@
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #d9aa71;">
        <div class="container">
            <a href="/Home" class="navbar-brand"><i class="bi bi-bank"></i> Trang chủ</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (currentUser != null)
                    {
                        <li>@Html.ActionLink("Quản lý thành viên", "Index", "ThanhViens", new { area = "" }, new { @class = "nav-link" + activeClass("ThanhViens") })</li>
                    }
                    @*<li>@Html.ActionLink("Phả đồ v1", "PhaDo", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@
                    <li>@Html.ActionLink("Tin tức", "Index", "TinTucs", new { area = "" }, new { @class = "nav-link" + activeClass("TinTucs") })</li>
                    <li>@Html.ActionLink("Phả ký", "Index", "PhaKys", new { area = "" }, new { @class = "nav-link" + activeClass("PhaKys") })</li>
                    <li>@Html.ActionLink("Tộc ước", "Index", "TocUocs", new { area = "" }, new { @class = "nav-link" + activeClass("TocUocs") })</li>
                    <li>@Html.ActionLink("Thư viện ảnh", "Index", "Anhs", new { area = "" }, new { @class = "nav-link" + activeClass("Anhs") })</li>
                    <li>@Html.ActionLink("Phả đồ", "PhaDo1", "Home", new { area = "" }, new { @class = "nav-link" + activeClass("PhaDo") })</li>
                </ul>
                <ul class="navbar-nav justify-content-end">
                    @if (currentUser != null)
                    {
                        <li><span class="nav-link fw-bold"><i class="bi bi-person-circle"></i> @currentUser.UserName</span></li>
                        <li>@Html.ActionLink("[Đăng xuất]", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @Scripts.Render("~/bundles/jquery")
    <div class="container body-content">
        @RenderBody()<footer class="footer">
            <div class="container">
                <div class="row" style="padding-top: 5px;">
                    <div class="col-md-2"><img src="~/Content/img/logo-footer.png" width="150"></div>
                    <div class="col-md-5">
                        <p class="footer-title">HỌ TRẦN</p>
                        <p class="footer-text"><b>Địa chỉ:</b> Xã </p>
                        <p class="footer-text"><b>Trưởng tộc:</b>- <b>Điện thoại:</b></p>
                        <p class="footer-text"><b>Quản lý website:</b>  - <b>Điện thoại:</b> </p>
                    </div>
                    <div class="col-md-5">
                        <div class="row">
                            <div class="col-md-6">
                                <ul>
                                    <li><a href="/TinTucs" target="_self">Tin tức</a></li>
                                    <li><a href="/PhaKys" target="_self">Phả ký</a></li>
                                    <li><a href="/TocUocs" target="_self">Tộc ước</a></li>
                                    <li><a href="/Anhs" target="_self">Ảnh</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <hr />
        <footer>
            <p class="copyright">&copy; @DateTime.Now.Year - Phát triển bởi <a class="text-success" href="https://yenbai.net.vn">Trung tâm Chuyển đổi số tỉnh Yên Bái</a></p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
