@model GiaPha.Models.TinTuc

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin chi tiết tin tức</h2>

<div>


    <hr />
    <dl class="dl-horizontal">
        <div class="form-group col-md-6">
            <strong>Ảnh đại diện</strong>
            @Html.EditorFor(model => model.AnhDaiDien, new { htmlAttributes = new { @class = "form-control w-100", @disabled = true } })
        </div>
        <dl class="dl-horizontal">
            <div class="form-group col-md-6">
                <strong>Tiêu đề</strong>
                @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control w-100", @disabled = true } })
            </div>


            <dl class="dl-horizontal">

                <strong>Nội dung</strong>
                @Html.DisplayFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control w-100", @disabled = true } })



            <dl class="dl-horizontal">
                <div class="form-group col-md-6">
                    <strong>Ảnh đại diện</strong>
                    @Html.EditorFor(model => model.AnhDaiDien, new { htmlAttributes = new { @class = "form-control w-100", @disabled = true } })
                </div>

                <div class="form-group">
                    <strong>Loại tin</strong>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.TinNoiBat)
                            @Html.ValidationMessageFor(model => model.TinNoiBat, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <strong>Trạng thái</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                    </div>
                </div>

            </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
