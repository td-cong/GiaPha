@model IEnumerable<GiaPha.Models.TinTuc>
@{
    ViewBag.Title = "Quản lý thành viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var VoChongList = (List<GiaPha.Models.VoChong>)ViewBag.VoChongList;
    var danhSachTin = Model;
    var tinNoiBat = danhSachTin.Where(x => x.TinNoiBat == true).OrderByDescending(x => x.ID).FirstOrDefault();
    var dsTinKhac = danhSachTin.Where(x => x.ID != tinNoiBat.ID);
}

@if (ViewBag.User != null)
{
    <div>@ViewBag.User.UserName</div>
}


<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="col-md-5">
            <div class="card"><img class="card-img-top" src="@Html.Raw(tinNoiBat.AnhDaiDien)" style="width: 100%; height: auto;"></div>
        </div>
        <div class="col-md-7">
            <div class="title-content">
                @Html.Raw(tinNoiBat.TieuDe)
            </div>
            <div class="title-content">
                @Html.Raw(tinNoiBat.NoiDung)
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="col-md-12" align="center" style="margin-top:20px; margin-bottom:20px"><div class="tab-page-long active"><a href="/?gpdh=1&amp;Tin-tuc-dong-ho.html">Tin tức dòng họ</a></div></div>
    <div class="col-md-12">
        <div class="row">
            @foreach (var item in dsTinKhac)
            {
                <div class="col-md-4">
                    <div class="card">
                        <a href="/tintucs/detail/@(item.ID)"><img src="@(item.AnhDaiDien)" alt="@(item.TieuDe)" class="card-img-top card-img-top_home"></a>
                        <div class="card-body">
                            <h5 class="card-title"><a href="/tintucs/detail/@(item.ID)"> @item.TieuDe</a></h5>
                            <p class="card-text">@(item.NoiDung)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<footer class="footer">
    <div class="container">
